<?xml version="1.0"?>
<config>
    <modules>
        <Evatix_Banner>
            <version>0.1.0</version>
        </Evatix_Banner>
    </modules>
    <frontend>
        <routers>
            <banner>
                <use>standard</use>
                <args>
                    <module>Evatix_Banner</module>
                    <frontName>banner</frontName>
                </args>
            </banner>
        </routers>
        <layout>
            <updates>
                <banner>
                    <file>banner.xml</file>
                </banner>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <banner>
                <use>admin</use>
                <args>
                    <module>Evatix_Banner</module>
                    <frontName>banner</frontName>
                </args>
            </banner>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <artists module="artists">
              
                <children>
                    
                    <banner translate="title" module="banner">
                        <title>Artist Banner</title>
                        <action>banner/adminhtml_banner</action>
                        <sort_order>1000</sort_order>
                    </banner>
                                        
                </children>
            </artists>
            <bannerslider module="bannerslider">
              
                <children>
                    
                    <!--item translate="title" module="banner">
                        <title>Artist Banner</title>
                        <action>banner/adminhtml_banner</action>
                        <sort_order>10</sort_order>
                    </item-->
                    
                    <slider translate="title" module="banner">
                        <title>Manage Slider</title>
                        <action>banner/adminhtml_slider</action>
                        <sort_order>20</sort_order>
                    </slider>
                    
                </children>
            </bannerslider>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Evatix_Banner>
                            <title>Banner Module</title>
                            <sort_order>10</sort_order>
                        </Evatix_Banner>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <banner>
                    <file>banner.xml</file>
                </banner>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <banner>
                <class>Evatix_Banner_Model</class>
                <resourceModel>banner_mysql4</resourceModel>
            </banner>
            <banner_mysql4>
                <class>Evatix_Banner_Model_Mysql4</class>
                <entities>
                    <banner>
                        <table>homepage_banner</table>
                    </banner>
                    <slider>
                        <table>homepage_slider</table>
                    </slider>
                </entities>
            </banner_mysql4>
        </models>
        <resources>
            <banner_setup>
                <setup>
                    <module>Evatix_Banner</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </banner_setup>
            <banner_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </banner_write>
            <banner_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </banner_read>
        </resources>
        <blocks>
            <banner>
                <class>Evatix_Banner_Block</class>
            </banner>
        </blocks>
        <helpers>
            <banner>
                <class>Evatix_Banner_Helper</class>
            </banner>
        </helpers>
    </global>
</config>