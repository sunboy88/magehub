<?xml version="1.0"?>
<layout version="0.1.0">
  <default></default>

  <artists_index_index>
        <label>Artist Category List</label>
        <reference name="head">
            <action method="setTitle" translate="title" module="artists"><title>Artist Category List</title></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="artists/category" name="artist_category" template="artists/category.phtml"/>
        </reference>
  </artists_index_index>

  <artists_index_list>
        <label>Artist List based on Artist Category</label>
        <reference name="head">
            <action method="setTitle" translate="title" module="artists"><title>Artist List</title></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="artists/list" name="artist_list" template="artists/list.phtml"/>
        </reference>
  </artists_index_list>


  <artists_index_apply>
        <label>Apply Form</label>
        <reference name="head">
            <action method="setTitle" translate="title" module="artists">
                <title>Sponsorhsip/Endorsement Application</title>
            </action>

            <action method="addItem"><type>js_css</type><name>calendar/calendar-win2k-1.css</name><params/><!--<if/><condition>can_load_calendar_js</condition>--></action>
            <action method="addItem"><type>js</type><name>calendar/calendar.js</name><!--<params/><if/><condition>can_load_calendar_js</condition>--></action>
            <action method="addItem"><type>js</type><name>calendar/calendar-setup.js</name><!--<params/><if/><condition>can_load_calendar_js</condition>--></action>
        
        </reference>
        
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="artists/apply" name="artist_apply" template="artists/apply.phtml"/>
        </reference>
  </artists_index_apply>

  <artists_index_featured>
        <label>Featured Artists</label>
        <reference name="head">
            <action method="setTitle" translate="title" module="artists"><title>Featured Artists</title></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="artists/featuredartists" name="artist_featured" template="artists/featured.phtml"/>
        </reference>
  </artists_index_featured>
  

  <artists_index_view>
        <label>Details View of a Artist</label>
        <reference name="head">
            <action method="setTitle" translate="title" module="artists"><title>Artist Information</title></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="artists/view" name="artist_view" template="artists/view.phtml"/>
        </reference>
  </artists_index_view>

  
</layout > 
